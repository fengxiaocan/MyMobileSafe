<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_taskmanager_listview_appicon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="6dp"
        android:src="@drawable/evil" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_taskmanager_listview_item_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="360mpbilesafe"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_taskmanager_listview_item_issd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_taskmanager_listview_item_appname"
            android:text="占用内存:0MB"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/cb_taskmanager"
            android:focusable="false"
            android:clickable="false"
            android:layout_marginRight="20dp"
            android:button="@drawable/checkbox_taskmanager"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>