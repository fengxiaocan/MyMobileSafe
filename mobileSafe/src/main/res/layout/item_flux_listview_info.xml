<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_flux_listview_appicon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="6dp"
        android:src="@drawable/evil" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_flux_listview_item_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="360mpbilesafe"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_flux_listview_item_useflux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@id/tv_flux_listview_item_appname"
            android:text="已使用的流量:  "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_flux_listview_item_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@id/tv_flux_listview_item_appname"
            android:layout_toRightOf="@id/tv_flux_listview_item_useflux"
            android:text="0KB"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>