<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/dialog_main_setpassword_title"
        android:text="添加联系人进黑名单" />

    <EditText
        android:id="@+id/et_intercept_add_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/et_intercept_bg_add"
        android:hint="请输入号码"
        android:inputType="phone"
        android:padding="10dp" />

    <RadioGroup
        android:id="@+id/rg_intercept_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_intercept_dialog_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="电话" />

        <RadioButton
            android:id="@+id/rb_intercept_dialog_sms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="短信" />

        <RadioButton
            android:id="@+id/rb_intercept_dialog_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全部" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp" >

        <Button
            android:id="@+id/bt_intercept_dialog_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bt_main_setpassword_bg_selector"
            android:text="添加" />

        <Button
            android:id="@+id/bt_intercept_dialog_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/bt_main_setpassword_bg_selector_cancle"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>